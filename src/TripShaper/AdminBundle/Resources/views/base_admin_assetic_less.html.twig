<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}TripShaper Admin{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/tripshaperadmin/css/all.css') }}" type="text/css" media="all" />
            <!--[if IE]>
                <link href="{{ asset('bundles/tripshaperadmin/css/ie.css') }}" rel="stylesheet" type="text/css" />
            <![endif]-->
            <link rel="stylesheet" href="{{ asset('bundles/tripshaperadmin/css/jquery-ui-1.8.18.custom.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/tripshaperadmin/css/jquery-tagit-simple-blue.css') }}" type="text/css" media="all" />
        {% endblock %}
        {% block javascript_head %}
            <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="{{ asset("bundles/tripshaperadmin/javascripts/jquery-1.7.1.min.js") }}">\x3C/script>')</script>
            <script type="text/javascript" src="{{ asset('bundles/tripshaperadmin/javascripts/jquery-ui-1.8.18.custom.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/tripshaperadmin/javascripts/jquery.tagit.js') }}"></script>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header">
            {% block header %}
                {% block logo %}
                <div class="logo">
                    TripShaper Admin
                </div>
                {% endblock %}
                {% block profile %}
                <div class="profile">
                    <ul>
                        <li>
                            <a href="#">Welcome</a>
                        </li>
                        <li>
                            <a class='logout' href="#">Log out will be connect to security</a>
                        </li>
                    </ul>
                </div>
                {% endblock %}
                {% block menu %}
                     {{ knp_menu_render('admin') }}
                {% endblock %}
            {% endblock %}
        </div>
        <div id="content">
            {% block flashes %}
                {% if app.session.flash('success') %}
                    <div class="notification_box success">
                        {{ app.session.flash('success')|raw }}
                    </div>
                {% endif %}
                {% if app.session.flash('error') %}
                    <div class="notification_box error">
                        {{ app.session.flash('error')|raw }}
                    </div>
                {% endif %}
            {% endblock %}

            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/tripshaperadmin/javascripts/menu.js') }}"></script>
            <script type="text/javascript">
                var menu=new menu.dd("menu");
                menu.init("main_navigation","mainhover");
            </script>
        {% endblock %}
    </body>
</html>
